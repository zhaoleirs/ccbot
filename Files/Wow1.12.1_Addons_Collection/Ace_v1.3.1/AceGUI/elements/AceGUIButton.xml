<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/FrameXML/UI.xsd">

	<Script file="AceGUIButton.lua"/>

	<Button name="AceGUIButtonTemplate" virtual="true">
		<Scripts>
			<OnClick>
				this:CallHandler("OnClick")
			</OnClick>
		</Scripts>
	</Button>

	<Button name="AceGUIPanelButtonTemplate" inherits="UIPanelButtonTemplate" virtual="true">
		<Scripts>
			<OnClick>
				this:CallHandler("OnClick")
			</OnClick>
			<OnEnter>
				this:CallHandler("OnEnter")
			</OnEnter>
			<OnLeave>
				this:CallHandler("OnLeave")
			</OnLeave>
		</Scripts>
	</Button>
</Ui>