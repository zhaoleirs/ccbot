			<Slider name="ArcanumLanguage_Slider" inherits="OptionsSliderTemplate" minValue="1" maxValue="3" valueStep="1" virtual="true">
				<Size>
					<AbsDimension x="150" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER" relativeTo="ArcanumMessageMenu" relativeFrom="TOP">
						<Offset>
							<AbsDimension x="0" y="180"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
						if (this:GetValue() == 1) then
							GameTooltip:SetText(Arcanum_ColoredMsg("Francais"));
						elseif (this:GetValue() == 2) then
							GameTooltip:SetText(Arcanum_ColoredMsg("English"));
						else
							GameTooltip:SetText(Arcanum_ColoredMsg("Deutsch"));
						end
					</OnEnter>
					<OnValueChanged>
						GameTooltip:SetText(this:GetValue());
						if (this:GetValue() == 1) then
							GameTooltip:SetText(Arcanum_ColoredMsg("Francais"));
							ArcanumConfig.ArcanumLanguage = "frFR";
							Arcanum_Localization_Dialog_Fr();
						elseif (this:GetValue() == 2) then
							GameTooltip:SetText(Arcanum_ColoredMsg("English"));
							ArcanumConfig.ArcanumLanguage = "enUS";
							Arcanum_Localization_Dialog_En();
						else
							GameTooltip:SetText(Arcanum_ColoredMsg("Deutsch"));
							ArcanumConfig.ArcanumLanguage = "deDE";
							Arcanum_Localization_Dialog_De();
						end
						Arcanum_LanguageInitialize();
					</OnValueChanged>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Slider>
				
