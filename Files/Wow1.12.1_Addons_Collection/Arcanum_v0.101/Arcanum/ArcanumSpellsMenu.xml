<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

	<Frame name="ArcanumSpellsMenu" frameStrata="DIALOG" movable="false" enableMouse="true" parent="ArcanumGeneralFrame">
		<Size>
			<AbsDimension x="350" y="452"/>
		</Size>
		<Anchors>
			<Anchor point="BOTTOMLEFT" relativeTo="ArcanumGeneralFrame"/>
		</Anchors>
		<HitRectInsets>
			<AbsInset left="0" right="35" top="0" bottom="75"/>
		</HitRectInsets>
		<Layers>
			<Layer level="ARTWORK">	
				<FontString name="ArcanumLevelBuff_Option" inherits="GameFontNormalSmall">
					<Color r="1.0" g="1.0" b="1.0" a="1"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="ArcanumSpellsMenu" relativeFrom="TOPLEFT">
							<Offset>
								<AbsDimension x="60" y="-40"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
                <FontString name="ArcanumConsumeLeftFood_Option" inherits="GameFontNormalSmall">
					<Color r="1.0" g="1.0" b="1.0" a="1"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="ArcanumSpellsMenu" relativeFrom="TOPLEFT">
							<Offset>
								<AbsDimension x="60" y="-130"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="ArcanumConsumeRightFood_Option" inherits="GameFontNormalSmall">
					<Color r="1.0" g="1.0" b="1.0" a="1"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="ArcanumSpellsMenu" relativeFrom="TOPLEFT">
							<Offset>
								<AbsDimension x="60" y="-150"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
                <FontString name="ArcanumRandMount_Option" inherits="GameFontNormalSmall">
					<Color r="1.0" g="1.0" b="1.0" a="1"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="ArcanumSpellsMenu" relativeFrom="TOPLEFT">
							<Offset>
								<AbsDimension x="60" y="-190"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
            </Layer>	
		</Layers>
		<Frames>
            <Slider name="ArcanumEvocationLimit_Slider" inherits="OptionsSliderTemplate" minValue="0" maxValue="100" valueStep="10" virtual="true">
				<Size>
					<AbsDimension x="290" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER" relativeTo="ArcanumSpellsMenu" relativeFrom="TOP">
						<Offset>
							<AbsDimension x="0" y="140"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
						GameTooltip:SetText(Arcanum_ColoredMsg(this:GetValue().." %"));
					</OnEnter>
					<OnValueChanged>
						ArcanumConfig.EvocationLimit = this:GetValue();
						GameTooltip:SetText(Arcanum_ColoredMsg(this:GetValue().." %"));
					</OnValueChanged>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Slider>
			<CheckButton name="ArcanumLevelBuff_Button" enableMouse="true" inherits="UICheckButtonTemplate" checked="false">
				<Size>
					<AbsDimension x="24" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="ArcanumSpellsMenu" relativeFrom="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-35"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if (this:GetChecked()) then
							ArcanumConfig.LevelBuff = true;
						else
							ArcanumConfig.LevelBuff = false;
						end
					</OnClick>
				</Scripts>
			</CheckButton>
            <CheckButton name="ArcanumConsumeLeftFood_Button" enableMouse="true" inherits="UICheckButtonTemplate" checked="false">
				<Size>
					<AbsDimension x="24" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="ArcanumSpellsMenu" relativeFrom="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-125"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
                        if (this:GetChecked()) then
							ArcanumConfig.ConsumeFood = "Left";
							ArcanumConsumeRightFood_Button:SetChecked(0);
                        else
							ArcanumConfig.ConsumeFood = "Right";
							ArcanumConsumeRightFood_Button:SetChecked(1);
                           end
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="ArcanumConsumeRightFood_Button" enableMouse="true" inherits="UICheckButtonTemplate" checked="false">
				<Size>
					<AbsDimension x="24" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="ArcanumSpellsMenu" relativeFrom="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-145"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
                        if (this:GetChecked()) then
							ArcanumConfig.ConsumeFood = "Right";
							ArcanumConsumeLeftFood_Button:SetChecked(0);
						else
							ArcanumConfig.ConsumeFood = "Left";
							ArcanumConsumeLeftFood_Button:SetChecked(1);
						end
					</OnClick>
				</Scripts>
			</CheckButton>
            <CheckButton name="ArcanumRandMount_Button" enableMouse="true" inherits="UICheckButtonTemplate" checked="false">
				<Size>
					<AbsDimension x="24" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="ArcanumSpellsMenu" relativeFrom="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-185"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
                        if (this:GetChecked()) then
							ArcanumConfig.RandMount = true;
						else
                        	ArcanumConfig.RandMount = false;
						end
					</OnClick>
				</Scripts>
			</CheckButton>
			<Button name="ArcanumDeleteFood_Button" inherits="OptionsButtonTemplate" virtual="true">
				<Size>
					<AbsDimension x="200" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER"  relativeTo="ArcanumSpellsMenu" relativeFrom="TOP">
						<Offset>
							<AbsDimension x="0" y="-10" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						Arcanum_DeleteItem("Food");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="ArcanumDeleteWater_Button" inherits="OptionsButtonTemplate" virtual="true">
				<Size>
					<AbsDimension x="200" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER"  relativeTo="ArcanumSpellsMenu" relativeFrom="TOP">
						<Offset>
							<AbsDimension x="0" y="-30" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						Arcanum_DeleteItem("Water");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="ArcanumDeleteManaGem_Button" inherits="OptionsButtonTemplate" virtual="true">
				<Size>
					<AbsDimension x="200" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER"  relativeTo="ArcanumSpellsMenu" relativeFrom="TOP">
						<Offset>
							<AbsDimension x="0" y="-50" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						Arcanum_DeleteItem("ManaGem");
					</OnClick>
				</Scripts>
			</Button>
            <Button name="ArcanumButtonColor_Button" inherits="OptionsButtonTemplate" virtual="true">
				<Size>
					<AbsDimension x="200" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER"  relativeTo="ArcanumSpellsMenu" relativeFrom="TOP">
						<Offset>
							<AbsDimension x="0" y="-90" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						Arcanum_ButtonColorClick();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				HideUIPanel(ArcanumSpellsMenu);
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
