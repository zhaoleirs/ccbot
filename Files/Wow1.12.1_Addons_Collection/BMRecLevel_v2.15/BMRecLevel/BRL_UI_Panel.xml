<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="BRL_UI_Panel.lua"/>
	<CheckButton name="BRL_CheckButtonTemplate" inherits="UICheckButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="30" y="30"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormal" text="">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="-25" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				BRL_CheckButton_OnClick();
			</OnClick>
		</Scripts>
	</CheckButton>
	
	<Slider name="BRL_SliderTemplate" inherits="OptionsSliderTemplate" virtual="true">
		<Scripts>
			<OnValueChanged>
				PlaySound("igMainMenuOptionCheckBoxOn");
				BRL_Slider_OnValueChanged(this);
			</OnValueChanged>
			<OnEnter>
				BRL_Slider_OnEnter();
			</OnEnter>
			<OnLeave>
				BRL_Slider_OnLeave();
			</OnLeave>
		</Scripts>
	</Slider>

	<Frame name="BMRecLevelOptions" toplevel="true" frameStrata="HIGH" movable="true" enableMouse="true" hidden="true" parent="UIParent">
		<Size>
			<AbsDimension x="300" y="520"/>
			<!--<AbsDimension x="300" y="440"/>-->
			<!--<AbsDimension x="450" y="625"/>-->
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="BRL_Frame_TitleTexture" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="340" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="BRL_Frame_TitleText" inherits="GameTooltipHeaderText" text="Recommended Level">
					<Anchors>
						<Anchor point="TOP" relativeTo="BRL_Frame_TitleTexture">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="BRL_Main_Frame">
				<Size>
					<AbsDimension x="260" y="440"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
                    			<Offset>
							<AbsDimension x="0" y="-40"/>
                    			</Offset>
					</Anchor>
				</Anchors>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/>
					</BackgroundInsets>
				</Backdrop>
				<Frames>
					<!-- Zone Info Box Show/Hide -->
					<CheckButton name="BRL_Check1" inherits="BRL_CheckButtonTemplate">
						<Anchors>
							<Anchor point="TOP">
								<Offset>
									<AbsDimension x="-85" y="-10"/>
								</Offset>
							</Anchor>
						</Anchors>
					</CheckButton>
					
					<!-- Tooltip Show/Hide -->
					<CheckButton name="BRL_Check2" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check1" relativePoint="BOTTOMLEFT" />
							</Anchors>
					  </CheckButton>
					  
					  <!-- Map Text Show/Hide -->
					  <CheckButton name="BRL_Check3" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check2" relativePoint="BOTTOMLEFT" />
							</Anchors>
					 </CheckButton>	
					
					<!-- Tooltip Offset Left/Right -->
					<CheckButton name="BRL_Check4" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check3" relativePoint="BOTTOMLEFT" />
							</Anchors>
					</CheckButton>
					
					<!-- Tooltip Offset Bottom/Top -->
					<CheckButton name="BRL_Check5" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check4" relativePoint="BOTTOMLEFT" />
							</Anchors>
					</CheckButton>

					<!-- Show Tooltip Faction -->
					<CheckButton name="BRL_Check6" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check5" relativePoint="BOTTOMLEFT" />
							</Anchors>
					</CheckButton>
					
					<!-- Show Tooltip Instance -->
					<CheckButton name="BRL_Check7" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check6" relativePoint="BOTTOMLEFT" />
							</Anchors>
					</CheckButton>

					<!-- Show Zone In Frame -->
					<CheckButton name="BRL_Check8" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check7" relativePoint="BOTTOMLEFT" />
							</Anchors>
					</CheckButton>

					<!-- Show Recommended Instances -->
					<CheckButton name="BRL_Check9" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check8" relativePoint="BOTTOMLEFT" />
							</Anchors>
					</CheckButton>

					<!-- Show Recommended Battlegrounds -->
					<CheckButton name="BRL_Check10" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check9" relativePoint="BOTTOMLEFT" />
							</Anchors>
					</CheckButton>

					<!-- Show Continent in Tooltip -->
					<CheckButton name="BRL_Check11" inherits="BRL_CheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="BRL_Check10" relativePoint="BOTTOMLEFT" />
							</Anchors>
					</CheckButton>
					
					<!-- Alpha fade on border -->
					<Slider name="BRL_Slider1" inherits="BRL_SliderTemplate">
						<Anchors>
							<Anchor point="BOTTOM">
								<Offset>
									<AbsDimension x="0" y="50" />
								</Offset>
							</Anchor>
						</Anchors>
					</Slider>
					<!-- Reset Button -->			
					<Button name="BRL_ResetAllButton" inherits="GameMenuButtonTemplate" text="Reset All">
						<Anchors>
							<Anchor point="BOTTOM">
								<Offset>
									<AbsDimension x="0" y="8" />
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnClick>
								BRL_Reset_SlashHandler();
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
				<Scripts>
					<OnShow>
						BMRecLevel_OnShow();
					</OnShow>
				</Scripts>
			</Frame>
			<Button name="BRL_Frame_CloseButton" inherits="GameMenuButtonTemplate" text="Close">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-16" y="16" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						HideUIPanel(this:GetParent());
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				BRL_UI_Panel_OnLoad();
			</OnLoad>
			<OnEvent>
				BRL_OnEvent(event);
			</OnEvent>
			<OnShow>
				PlaySound("igMainMenuOption");
			</OnShow>
		</Scripts>
	</Frame>
</Ui>
