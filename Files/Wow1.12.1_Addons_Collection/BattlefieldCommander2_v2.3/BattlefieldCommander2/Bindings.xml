<Bindings>
	<Binding name="BFC_GLOBALCOMMSMENU" runOnUp="true" description="Global Comms Menu" header="BFC_HEADER">
		if ( keystate == "up" ) then
			BFC_Radio.HideMenu();
		else
			BFC_Radio.ShowGlobalMenu();
		end
	</Binding>
	<Binding name="BFC_LOCALCOMMSMENU" runOnUp="true" description="Local Comms Menu" header="BFC_HEADER">
		if ( keystate == "up" ) then
			BFC_Radio.HideMenu();
		else
			BFC_Radio.ShowLocalMenu();
		end
	</Binding>
	<Binding name="BFC_TOGGLEMAP" description="Toggle Map" header="BFC_HEADER">
		BFC_Map.ToggleVisible();
	</Binding>
	<Binding name="BFC_VIEWMAP" runOnUp="true" description="View Map" header="BFC_HEADER">
		BFC_Map.ToggleVisible();
	</Binding>
</Bindings>