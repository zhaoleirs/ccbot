                  <AbsDimension x="33" y="33"/>
               </Size>
               <Anchors>
                  <Anchor point="TOPLEFT">
                     <Offset>
                        <AbsDimension x="1" y="-2"/>
                     </Offset>
                  </Anchor>
               </Anchors>
            </NormalTexture>
            <PushedTexture file="Interface\Icons\INV_Misc_Book_09"/>
