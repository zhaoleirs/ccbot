               <OnLeave>   <!-- [ Mouse has stopped hovering over the book icon. ] -->
                  GameTooltip:Hide()
               </OnLeave>
               <OnLoad>
                  this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
                  this:Disable();
               </OnLoad>
            </Scripts>
         </Button>

         <!-- [ BookStoreBag Container, Holds the Book Slots ] -->
