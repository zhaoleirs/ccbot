         <!-- [ Book Slots, Button Template ] -->
         <Button name="BookStoreSlotTemplate" inherits="BookIconButtonTemplate" virtual="true" hidden="false">
            <NormalTexture name="$parentNormalTexture" file="Interface\Icons\INV_Misc_Book_09">
