					 <TexCoords left="0" right="1" top="0" bottom="1"/>
                  </Texture>
                  <FontString name="$parentTitle" inherits="GameFontNormal" justifyH="CENTER" text="BookStore">
                     <Anchors><Anchor point="TOP"><Offset><AbsDimension x="40" y="-11"/></Offset></Anchor></Anchors>
                  </FontString>
