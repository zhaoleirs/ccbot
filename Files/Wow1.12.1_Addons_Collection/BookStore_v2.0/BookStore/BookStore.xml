                        </Offset>
                     </Anchor>
                  </Anchors>
                  <Layers>
                     <Layer level="ARTWORK">
                        <FontString name="$parentLabel" inherits="GameFontNormal" justifyH="RIGHT" text="Next">
                           <Anchors>
                              <Anchor point="RIGHT" relativeTo="$parent" relativePoint="LEFT">
                                 <Offset>
                                    <AbsDimension x="-1" y="1"/>
                                 </Offset>
                              </Anchor>
