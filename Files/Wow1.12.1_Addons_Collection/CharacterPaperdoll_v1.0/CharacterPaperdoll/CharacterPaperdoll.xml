		<Size>
			<AbsDimension x="400" y="100"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="110" y="-52"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
