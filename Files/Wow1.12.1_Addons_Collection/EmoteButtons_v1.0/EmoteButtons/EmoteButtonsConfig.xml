				</Anchor>
			</Anchors>
		</FontString>
	</Layer>
    </Layers>


    <Frames>

	<Slider name="$parent_SetMainShift" inherits="EBSliderTemp">
		<Anchors>
			<Anchor point="TOPRIGHT" relativePoint="TOP">
				<Offset>
					<AbsDimension x="-130" y="-40"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				this:SetMinMaxValues(0,359);
				this:SetValueStep(2);
				getglobal(this:GetName().."High"):SetText("359'");
				getglobal(this:GetName().."Low"):SetText("0'");
			</OnLoad>
			<OnValueChanged>
				EmoteButtons_SliderChanged(this:GetName(), "'");
			</OnValueChanged>
		</Scripts>
	</Slider>

	<Slider name="$parent_SetMainSize" inherits="EBSliderTemp">
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOP">
				<Offset>
					<AbsDimension x="130" y="-40"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				this:SetMinMaxValues(24,64);
				this:SetValueStep(1);
				getglobal(this:GetName().."High"):SetText("64");
				getglobal(this:GetName().."Low"):SetText("24");
			</OnLoad>
			<OnValueChanged>
				EmoteButtons_SliderChanged(this:GetName(), "px");
			</OnValueChanged>
		</Scripts>
	</Slider>

      <Button name="$parent_SetAction" text="EMOTEBUTTONS_SETACTION" inherits="EmoteButtons_OptionButton_Template">
