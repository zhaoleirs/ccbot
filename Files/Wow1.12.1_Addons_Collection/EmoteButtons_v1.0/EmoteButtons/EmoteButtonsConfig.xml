	<Button name="EmoteButtons_CloseConfig" inherits="UIPanelCloseButton">
		<Anchors>
			<Anchor point="TOPRIGHT" relativeTo="EmoteButtons_Config" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="-2" y="-4"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>             
				EmoteButtons_Init();
				this:RegisterEvent("ADDON_LOADED");
			</OnLoad>
			<OnClick>
				EmoteButtons_Config:Hide();
				EmoteButtons_HideSelector();
			</OnClick>
			<OnEvent>
				EmoteButtons_LoadedVars();
			</OnEvent>
		</Scripts>
	</Button>
    </Frames>
