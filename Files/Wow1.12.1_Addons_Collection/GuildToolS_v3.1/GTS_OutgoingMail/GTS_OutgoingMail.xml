			GTS_SetGUIName("GTS_Menu_OM_Header");
			GTS_SetGUIName("GTS_Menu_OM_Ver");
			GTS_SetGUIName("GTS_Menu_OM_Loaded");
			GTS_SetGUIName("GTS_Menu_OM_history");
