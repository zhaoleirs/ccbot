							<Offset>
								<AbsDimension x="85" y="-100"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1"/>
				</FontString>
				<FontString name="$parent_fromDate" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="205" y="-85"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="0" b="0"/>
				</FontString>
