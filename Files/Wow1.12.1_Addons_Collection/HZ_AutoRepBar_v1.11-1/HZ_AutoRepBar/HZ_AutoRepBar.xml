<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\FrameXML\UI.xsd">

    <!-- This script file is currently used for everything, so this XML file should be loaded first in the TOC file -->
    <Script file="HZ_AutoRepBar.lua"/>

    <!-- This frame is just a stub for calling the OnLoad and OnEvent functions in the LUA script -->
    <Frame name="HZARB_MainFrame" parent="UIParent" hidden="true">
        <Scripts>
            <OnLoad>
                HZARB_OnLoad();
            </OnLoad>
            <OnEvent>
                HZARB_OnEvent();
            </OnEvent>
        </Scripts>
    </Frame>
</Ui>
