<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
	..\FrameXML\UI.xsd">
	<Script	file="MyMinimapButton.lua"/>
	<Script	file="MetaHud_Vars.lua"/>
	<Script	file="MetaHud.lua"/>

	<!-- Event Frame -->
	<Frame name="MetaHud_EventFrame" parent="UIParent">
		<Scripts>
			<OnLoad>
				MetaHud:OnLoad();
			</OnLoad>
			<OnEvent>
			    MetaHud:OnEvent(event, arg1, arg2, arg3);
			</OnEvent>
			<OnUpdate>
				MetaHud:OnUpdate();
			</OnUpdate>
		</Scripts>
	</Frame>

	<!-- Target Dropdown -->
	<Frame name="MetaHud_Target_DropDown" inherits="UIDropDownMenuTemplate" id="1" hidden="false">
		<Size>
			<AbsDimension x="160" y="160"/>
		</Size>
		<Anchors>
			<Anchor point="TOP">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				UIDropDownMenu_Initialize(this, MetaHud_Target_DropDown_Initialize, "MENU");
			</OnLoad>
		</Scripts>
	</Frame>
    
	<!-- Player Dropdown -->
	<Frame name="MetaHud_Player_DropDown" inherits="UIDropDownMenuTemplate" id="2" hidden="false">
		<Size>
			<AbsDimension x="160" y="160"/>
		</Size>
		<Anchors>
			<Anchor point="TOP">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				UIDropDownMenu_Initialize(this, MetaHud_Player_DropDown_Initialize, "MENU");
			</OnLoad>
		</Scripts>
	</Frame>	

	<!-- QuickMenu Dropdown -->
	<Frame name="MetaHud_QuickMenu_DropDown" inherits="UIDropDownMenuTemplate" id="3" hidden="false">
		<Size>
			<AbsDimension x="160" y="160"/>
		</Size>
		<Anchors>
			<Anchor point="TOP">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
	</Frame>	

	<Frame name="MetaHud_ToT_Frame" enableMouse="false" hidden="true" parent="UIParent">
		<Size>
			<AbsDimension x="120" y="18"/>
		</Size>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="14"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="4"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="3" bottom="3"/>
			</BackgroundInsets>
		</Backdrop>
		<Frames>
			<StatusBar name="MetaHud_ToTargetHealth_Bar" toplevel="true" inherits="TextStatusBar" enableMouse="false">
				<Size>
				  <AbsDimension x="112" y="10"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="4" y="-4"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
				  <OnLoad>
				  	this:RegisterEvent("UNIT_HEALTH");
				  	this:RegisterEvent("UNIT_HEALTHMAX");
			      this:SetStatusBarColor(0,1,0);
				    this:SetMinMaxValues(0,100);
				    this:SetValue(100);
				  </OnLoad>
				  <OnEvent>
				  	MetaHud:OnEvent();
				  </OnEvent>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
			</StatusBar>
		</Frames>
		<Scripts>
			<OnLoad>
				this:SetBackdropColor(1,0,0);
			</OnLoad>
		</Scripts>
	</Frame>	
</Ui>
