<Bindings>
	<Binding name="GEMS_LEFT" header="GEMS">
		if ( keystate == "down" ) then
			Gems_MoveLeft();
		end
	</Binding>
	<Binding name="GEMS_RIGHT">
		if ( keystate == "down" ) then
			Gems_MoveRight();
		end
	</Binding>
	<Binding name="GEMS_DOWN">
		if ( keystate == "down" ) then
			Gems_MoveDown();
		end
	</Binding>
</Bindings>