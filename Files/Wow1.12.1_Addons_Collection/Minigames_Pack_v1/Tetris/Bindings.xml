<Bindings>
	<Binding name="TETRIS_LEFT" header="TETRIS">
		if ( keystate == "down" ) then
			Tetris_GF_BF_l:Click();
		end
	</Binding>
	<Binding name="TETRIS_RIGHT">
		if ( keystate == "down" ) then
			Tetris_GF_BF_r:Click();
		end
	</Binding>
	<Binding name="TETRIS_DOWN">
		if ( keystate == "down" ) then
			Tetris_GF_BF_d:Click();
		end
	</Binding>
	<Binding name="TETRIS_TOURN">
		if ( keystate == "down" ) then
			Tetris_GF_BF_u:Click();
		end
	</Binding>
	<Binding name="TETRIS_PAUSE">
		if ( keystate == "down" ) then
			Tetris_GF_b_pause:Click();
		end
	</Binding>
</Bindings>
