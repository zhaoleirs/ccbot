<Ui>
  <Frame name="wowon_pf">
		
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border">
			<BackgroundInsets>
				<AbsInset left="6" right="6" top="6" bottom="6" />	
			</BackgroundInsets>
			<EdgeSize>
				<AbsValue val="25" />
			</EdgeSize>
    	</Backdrop>
    	
    	<Frames>
			<Button name="wowonid_b_exit" inherits="GameMenuButtonTemplate" text="Close">
				<Size>
					<AbsDimension x="75" y="25"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER">
						<Offset>
							<AbsDimension x="-35" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						wowon_exit_game ()
						wowon_hf:Hide()
					</OnClick>
				</Scripts>
			</Button>
	
			<Button name="wowonid_b_newgame" inherits="GameMenuButtonTemplate" text="New Game">
				<Size>
					<AbsDimension x="75" y="25"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER">
						<Offset>
							<AbsDimension x="35" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						wowon_new_game ()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
    	</Scripts>
    	
	</Frame>
</Ui>
