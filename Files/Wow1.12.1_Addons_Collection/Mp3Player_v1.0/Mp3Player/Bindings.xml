<Bindings>
	<Binding name="MP3PLAY" runOnUp="true" header="MP3PLAYER">
		if (keystate == "down" ) then
			Mp3PlaySong();
		end
	</Binding>

	<Binding name="MP3STOP" runOnUp="true" header="MP3PLAYER">
		if (keystate == "down" ) then
			mp3_MyScript_StopMp3(0);
		end
	</Binding>

	<Binding name="MP3NEXT" runOnUp="true" header="MP3PLAYER">
		if (keystate == "down" ) then
Mp3Next();
		end
	</Binding>


	<Binding name="MP3PREV" runOnUp="true" header="MP3PLAYER">
		if (keystate == "down" ) then
			Mp3Prev();
		end
	</Binding>
</Bindings>
