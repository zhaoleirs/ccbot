		<Scripts>
			<OnHide>
				-- Check if the options frame was opened by myAddOns
				if (MYADDONS_ACTIVE_OPTIONSFRAME == this) then
					ShowUIPanel(myAddOnsFrame);
				end
			</OnHide>
			<OnLoad>
				MyInventoryOptionsFrame_OnLoad();
			</OnLoad>
			<OnShow>
				MyInventoryOptionsFrame_OnShow();
			</OnShow>
			<OnMouseDown>
				this:StartMoving();
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing();
			</OnMouseUp>
