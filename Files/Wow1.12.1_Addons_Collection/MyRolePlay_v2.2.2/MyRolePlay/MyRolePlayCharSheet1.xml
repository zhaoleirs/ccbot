			</OnDragStart>
			<OnDragStop>
				 this:StopMovingOrSizing();
				 this.isMoving = false;
			</OnDragStop>
			<OnShow>
				for i = 1, table.getn(mrpPlayerList) do
					if (mrpPlayerList[i].CharacterName == UnitName("target")) then
						mrpSendMessage(MRP_GET_DESC, UnitName("target"));
						mrpSendMessage(MRP_GET_HIST, UnitName("target"));
						break;
					end
				end
				
				for i = 1, table.getn(mrpFlagRSPPlayerList) do
					if (mrpFlagRSPPlayerList[i].CharacterName == UnitName("target")) then
						mrpSendMessage(MRP_GET_FLAGRSP_DESC, UnitName("target"));
					end
				end
				mrpCharacterSheet1HeaderText:SetText(UnitName("target"));
				mrpCharSheet1UpdatePageButton();
				mrpCharacterSheet1UpdateInformation();
				SetPortraitTexture(CharacterSheet1Portrait, "target");
				mrpCharacterSheet1PortraitFrameBorder:SetTexture("Interface\AddOs\MyRolePlay\Textures\CharacterSheet1PortraitFrame.tga");

			</OnShow>
