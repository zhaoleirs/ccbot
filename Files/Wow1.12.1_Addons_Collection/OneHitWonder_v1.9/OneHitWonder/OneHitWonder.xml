			<Layer level="ARTWORK">
				<FontString name="$parentString" inherits="NumberFontNormalYellow">
					<Size>
						<AbsDimension x="96" y="0"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</FontString>
				<FontString name="$parentSubString" inherits="NumberFontNormalYellow">
					<Size>
						<AbsDimension x="384" y="0"/>
