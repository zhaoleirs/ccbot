					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnHide>
				if ( this.isMoving ) then
					this:StopMovingOrSizing();
					this.isMoving = false;
				end
			</OnHide>
			<OnMouseUp>
				if ( this.isMoving ) then
					this:StopMovingOrSizing();
					this.isMoving = false;
				end
			</OnMouseUp>
			<OnMouseDown>
				if ( ( not this.isLocked ) or ( this.isLocked == 0 ) ) then
					this:StartMoving();
					this.isMoving = true;
				end
			</OnMouseDown>
			<OnDragStart>
				if ( ( not this.isLocked ) or ( this.isLocked == 0 ) ) then
					this:StartMoving();
					this.isMoving = true;
				end
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
				this.isMoving = false;
			</OnDragStop>
		</Scripts>
	</Button>
