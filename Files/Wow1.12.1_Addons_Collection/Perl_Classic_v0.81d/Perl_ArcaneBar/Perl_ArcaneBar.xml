<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Perl_ArcaneBar.lua"/>


	<Frame name="Perl_ArcaneBar_Frame_Loaded_Frame" movable="true" parent="UIParent" hidden="false" enableMouse="true"/>

	<!-- AddOn Frames -->
	<Frame name="Perl_ArcaneBarFrame" parent="Perl_Player_NameFrame" movable="true" enableMouse="true" hidden="true">
		<Size>
			<AbsDimension x="190" y="15"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="4" y="-5"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>
			<StatusBar name="Perl_ArcaneBar" inherits="TextStatusBar" hidden="false">
				<Size>
					<AbsDimension x="190" y="15"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<BarTexture name="Perl_ArcaneBarTex" file="Interface\TargetingFrame\UI-StatusBar"/>
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="Perl_ArcaneBarSpark" file="Interface\AddOns\Perl_ArcaneBar\Perl_ArcaneBarSpark" alphaMode="ADD">
							<Size>
								<AbsDimension x="44" y="44"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<FontString name="Perl_ArcaneBar_CastTime" inherits="GameFontHighlight">
							<Anchors>
								<Anchor point="LEFT" relativeTo="Perl_Player_NameFrame" relativePoint="RIGHT"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</StatusBar>
			<Frame name="Perl_ArcaneBarFlash" hidden="true">
				<Size>
					<AbsDimension x="205" y="40"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="Perl_ArcaneBarFlashTex" file="Interface\AddOns\Perl_ArcaneBar\Perl_ArcaneBarFlash" alphaMode="ADD">
							<Size>
								<AbsDimension x="240" y="64"/>
							</Size>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				Perl_ArcaneBar_OnLoad();
			</OnLoad>
			<!--
			<OnEvent>
				Perl_ArcaneBar_OnEvent();
			</OnEvent>
			<OnUpdate>
				Perl_ArcaneBar_OnUpdate();
			</OnUpdate>
			-->
		</Scripts>
	</Frame>
</Ui>