		<Frames>
			<Button name="SSOverlayResizeWindow">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<AbsDimension x="-1" y="-1"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnMouseDown>
						if( not SSOverlay_Config.locked or SSOverlay_Config.locked == 0 ) then
							SSOverlay:StartSizing()
						end
					</OnMouseDown>
					<OnMouseUp>
						SSOverlay:StopMovingOrSizing()
					</OnMouseUp>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnMouseUp>
				if( this.isMoving ) then
					SSOverlay_SavePosition();
					this:StopMovingOrSizing();
					this.isMoving = false;
				end
			</OnMouseUp>
			<OnMouseDown>
				if( ( not SSOverlay_Config.locked or SSOverlay_Config.locked == 0 ) and ( arg1 == "LeftButton" ) ) then
					this:StartMoving();
					this.isMoving = true;
				end
			</OnMouseDown>
			<OnHide>
				if( this.isMoving ) then
					this:StopMovingOrSizing();
					this.isMoving = false;
				end
			</OnHide>
			<OnUpdate>
				SSOverlay_OnUpdate( arg1 );
			</OnUpdate>
			<OnLoad>
				this:RegisterForDrag( "LeftButton" );
				this:SetBackdropBorderColor( 0.4, 0.4, 0.4 );
				this:SetBackdropColor( 0.15, 0.15, 0.15 );
			</OnLoad>
		</Scripts>					
