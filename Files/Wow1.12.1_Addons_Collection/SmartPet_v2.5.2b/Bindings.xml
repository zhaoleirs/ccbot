<Bindings>
	<Binding name="OPTIONSMENU" header="SMARTPET">
		SmartPet_Options_Toggle();
	</Binding>
	<Binding name="TOGGLETAUNT">
		if (UnitClass("player") == "Hunter") then
			SmartPet_TauntToggle();
		end
	</Binding>
	<Binding name="CHASETOGGLE">
		SmartPet_OnSlashCommand(SMARTPET_NOCHASE);
	</Binding>
	<Binding name="SCATTERSHOT">
		SmartPetScatterShot();
	</Binding>
	<Binding name="THEBUTTON">
		SmartPetTheButton();
	</Binding>
	<Binding name="FEEDPET">
		SmartPet_OnSlashCommand(SMARTPET_FEED);
	</Binding>
</Bindings>