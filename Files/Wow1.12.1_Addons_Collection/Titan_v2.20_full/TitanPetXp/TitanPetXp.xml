			</Frame>
			<!-- Close Button -->
			<Button name="TitanPanelPetXpOptions_Close" inherits="GameMenuButtonTemplate" text="TPPX_CLOSE">
				<Size>
					<AbsDimension x="100" y="21"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="15" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						this:GetParent():Hide();
