  <Button name="TotemTimerTemplate" virtual="true">
    <Size>
      <AbsDimension x="30" y="30" />
    </Size>
    <Layers>
      <Layer level="ARTWORK">
        <Texture name="$parentIcon"/>
        <FontString name="$parentTime" inherits="GameFontNormalSmall" justifyH="CENTER">
          <Size>
            <AbsDimension x="36" y="10"/>
          </Size>
          <Anchors>
            <Anchor point="CENTER">
              <Offset>
                <AbsDimension x="-1" y="-20"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>
	TotemTimer_OnLoad();
      </OnLoad>
      <OnUpdate>
        TotemTimer_OnUpdate(arg1);
      </OnUpdate>
      <OnMouseDown>
        TotemTimer_OnDragStart();
      </OnMouseDown>
      <OnMouseUp>
        TotemTimer_OnDragStop();
      </OnMouseUp>
      <OnClick>
        TotemTimer_ReCast();
      </OnClick>
      <OnEnter>
        TotemTimer_OnEnter();
      </OnEnter>
      <OnLeave>
        GameTooltip:Hide();
      </OnLeave>
    </Scripts>
  </Button>
	<!-- temporary, create frame to handle initialization; once complete, destroy frame -->
