<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="TranquilyShot.lua"/>
	
	<Font name="TranqFont_Normal" font="Fonts\FRIZQT__.TTF" virtual="true">
		<Shadow>
			<Offset>
				<AbsDimension x="1" y="-1"/>
			</Offset>
			<Color r="0" g="0" b="0"/>
		</Shadow>
		<FontHeight>
			<AbsValue val="12"/>
		</FontHeight>
	</Font>

	<Font name="TranqFont_Small" font="Fonts\FRIZQT__.TTF" virtual="true">
		<Shadow>
			<Offset>
				<AbsDimension x="1" y="-1"/>
			</Offset>
			<Color r="0" g="0" b="0"/>
		</Shadow>
		<FontHeight>
			<AbsValue val="10"/>
		</FontHeight>
	</Font>

	<Frame name="TranquilityShotFrame" hidden="true" parent="UIParent" movable="true" enableMouse="true" frameStrata="DIALOG">
		<Size>
			<AbsDimension x="120" y="168"/>
		</Size>
		<Anchors>
			<Anchor point="BOTTOM" relativeTo="Minimap" relativePoint="BOTTOM">
				<Offset>
					<AbsDimension x="0" y="-200"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\AddOns\TranquilyShot\Textures\UI-Toast-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="3" bottom="3"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="9"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="9"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="BORDER">
				<FontString name="$parentCountLine" inherits="TranqFont_Normal" justifyH="LEFT" justifyV="MIDDLE" text="Shots: 0">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine1" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-36"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine2" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine1" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine3" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine2" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine4" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine3" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine5" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine4" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine6" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine5" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine7" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine6" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine8" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine7" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine9" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine8" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine10" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine9" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine11" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine10" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentLine12" inherits="TranqFont_Small" justifyH="LEFT" justifyV="MIDDLE" >	
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="$parentLine11" relativePoint="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers> 
		<Frames>
			<Button name="$parentCloseButton">
				<Size>
					<AbsDimension x="18" y="18"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT">
					<Offset>
						<AbsDimension x="3" y="-4"/>
					</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						TranquilityShotFrame:Hide();
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\AddOns\TranquilyShot\Textures\CloseButton-Normal"/>
				<PushedTexture file="Interface\AddOns\TranquilyShot\Textures\CloseButton-Normal"/>
				<HighlightTexture file="Interface\AddOns\TranquilyShot\Textures\CloseButton-Highlight" alphaMode="ADD"/>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				TranquilyShot_OnLoad();
				this:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnEvent>
				TranquilyShot_OnEvent();
			</OnEvent>
			<OnUpdate>
				TranquilyShot_OnUpdate();
			</OnUpdate>
			<OnDragStart>
				this:StartMoving();
			</OnDragStart>
  			<OnDragStop>
  				this:StopMovingOrSizing();
  			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>
