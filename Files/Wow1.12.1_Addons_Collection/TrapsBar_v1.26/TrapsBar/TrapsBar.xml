<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

<Script file="TrapsBar.lua"/>
	<CheckButton name="TrapsBarButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="28" y="28"/>
		</Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentIcon"/>
			</Layer>
		</Layers>
		<Frames>
			<Model name="$parentCooldown" inherits="CooldownFrameTemplate" scale="0.6"/>
		</Frames>
		<NormalTexture name="$parentNormalTexture" file="Interface\Buttons\UI-Quickslot2">
			<Size>
				<AbsDimension x="48" y="48"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="-1"/>
					</Offset>
				</Anchor>
			</Anchors>
		</NormalTexture>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square"/>
		<CheckedTexture alphaMode="ADD" file="Interface\Buttons\CheckButtonHilight"/>
		<Scripts>
			<OnLoad>
				this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnClick>
				this:SetChecked("0");
				TrapsBar_OnClick(this);
			</OnClick>
			<OnEnter>
				TrapsBar_SetTooltip(this);
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
	</CheckButton>
	<Frame name="TrapsBar" toplevel="true" parent="UIParent" movable="true">
		<Size>
			<AbsDimension x="50" y="50"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Frames>
			<CheckButton name="TrapsBarButton1" inherits="TrapsBarButtonTemplate" id="1">
				<Anchors>
					<Anchor point="LEFT">
						<Offset>
							<AbsDimension x="10" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			<Scripts>
				<OnMouseDown>
					if (arg1 == "RightButton") then
						if (IsControlKeyDown()) then
							TrapsBar:StartMoving();
						end
					end
				</OnMouseDown>
				<OnMouseUp>
					if (arg1 == "RightButton") then
						TrapsBar:StopMovingOrSizing();
						TrapsBarGetPoint();
					end
				</OnMouseUp>
			</Scripts>
			</CheckButton>
			<CheckButton name="TrapsBarButton2" inherits="TrapsBarButtonTemplate" id="2">
				<Anchors>
					<Anchor point="LEFT" relativeTo="TrapsBarButton1" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="1" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			<Scripts>
				<OnMouseDown>
					if (arg1 == "RightButton") then
						if (IsControlKeyDown()) then
							TrapsBar:StartMoving();
						end
					end
				</OnMouseDown>
				<OnMouseUp>
					if (arg1 == "RightButton") then
						TrapsBar:StopMovingOrSizing();
						TrapsBarGetPoint();
					end
				</OnMouseUp>
			</Scripts>
			</CheckButton>
			<CheckButton name="TrapsBarButton3" inherits="TrapsBarButtonTemplate" id="3">
				<Anchors>
					<Anchor point="LEFT" relativeTo="TrapsBarButton2" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="1" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			<Scripts>
				<OnMouseDown>
					if (arg1 == "RightButton") then
						if (IsControlKeyDown()) then
							TrapsBar:StartMoving();
						end
					end
				</OnMouseDown>
				<OnMouseUp>
					if (arg1 == "RightButton") then
						TrapsBar:StopMovingOrSizing();
						TrapsBarGetPoint();
					end
				</OnMouseUp>
			</Scripts>
			</CheckButton>
			<CheckButton name="TrapsBarButton4" inherits="TrapsBarButtonTemplate" id="4">
				<Anchors>
					<Anchor point="LEFT" relativeTo="TrapsBarButton3" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="1" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			<Scripts>
				<OnMouseDown>
					if (arg1 == "RightButton") then
						if (IsControlKeyDown()) then
							TrapsBar:StartMoving();
						end
					end
				</OnMouseDown>
				<OnMouseUp>
					if (arg1 == "RightButton") then
						TrapsBar:StopMovingOrSizing();
						TrapsBarGetPoint();
					end
				</OnMouseUp>
			</Scripts>
			</CheckButton>
		</Frames>
		<Scripts>
			<OnLoad>
				TrapsBar_OnLoad();
			</OnLoad>
			<OnEvent>
				TrapsBar_OnEvent();
			</OnEvent>
			<OnMouseDown>
				if (arg1 == "RightButton") then
					if (IsControlKeyDown()) then
						this:StartMoving();
					end
				end
			</OnMouseDown>
			<OnMouseUp>
				if (arg1 == "RightButton") then
					this:StopMovingOrSizing();
				end
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>
