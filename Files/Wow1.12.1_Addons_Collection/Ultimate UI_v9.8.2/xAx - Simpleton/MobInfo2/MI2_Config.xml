            </Button>
        </Frames>
        
        <Scripts>
            <OnLoad> MI2_OptionsFrameOnLoad(); </OnLoad>
            <OnShow> MI2_OptionsFrameOnShow(); </OnShow>
            <OnMouseDown> miConfig_OnMouseDown(arg1); </OnMouseDown>
            <OnMouseUp> miConfig_OnMouseUp(arg1); </OnMouseUp>
        </Scripts>
    </Frame>
</Ui>
