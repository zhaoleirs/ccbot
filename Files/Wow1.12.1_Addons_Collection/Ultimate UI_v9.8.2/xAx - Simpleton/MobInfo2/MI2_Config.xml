                                <Offset> <AbsDimension x="10" y="-290" /> </Offset>
                            </Anchor>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>
            
            <!-- ==================================================== -->
            <!-- inner frame with general MobInfo options             -->
