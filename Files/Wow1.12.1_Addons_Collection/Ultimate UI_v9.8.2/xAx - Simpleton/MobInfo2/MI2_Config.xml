						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="MI2_OptHealthPosY">
								<Offset><AbsDimension x="0" y="-30" /></Offset>
							</Anchor>
						</Anchors>
					</Slider>
					<Slider name="MI2_OptHealthPosX" inherits="MI2_SliderTemplate">
                        <Size> <AbsDimension x="110" y="20" /> </Size>
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="MI2_OptHealthPosY">
