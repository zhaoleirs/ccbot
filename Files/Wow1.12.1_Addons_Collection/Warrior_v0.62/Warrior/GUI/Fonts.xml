<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/"> 

<!-- master font -->
<Font name="WGUI_MasterFont" virtual="true">
	<Shadow>
		<Offset>
			<AbsDimension x="1" y="-1"/>
		</Offset>
		<Color r="0" g="0" b="0"/>
	</Shadow>
	<FontHeight>
		<AbsValue val="12"/>
	</FontHeight>
</Font>

<!-- bold font -->
<Font name="WGUI_LargeFont" inherts="WGUI_MasterFont" font="Interface\AddOns\Warrior\Fonts\WGUI_1.ttf" virtual="true">
	<FontHeight>
		<AbsValue val="16"/>
	</FontHeight>
</Font>

<!-- normal font -->
<Font name="WGUI_NormalFont" inherts="WGUI_MasterFont" font="Interface\AddOns\Warrior\Fonts\WGUI_1.ttf" virtual="true">
	<FontHeight>
		<AbsValue val="12"/>
	</FontHeight>
</Font>

<!-- small font -->
<Font name="WGUI_SmallFont" inherts="WGUI_MasterFont" font="Interface\AddOns\Warrior\Fonts\WGUI_1.ttf" virtual="true">
	<FontHeight>
		<AbsValue val="10"/>
	</FontHeight>
</Font>

<!-- tiny font -->
<Font name="WGUI_TinyFont" inherts="WGUI_MasterFont" font="Interface\AddOns\Warrior\Fonts\WGUI_1.ttf" virtual="true">
	<FontHeight>
		<AbsValue val="8"/>
	</FontHeight>
</Font>

</Ui>