<Bindings>
        <Binding name="TOGGLERAID" header="XPERL">
                XPerlConfig.ShowRaid = abs(XPerlConfig.ShowRaid - 1)
                if (XPerl_Raid_Position) then
                        XPerl_Raid_Position()
                end
	</Binding>
        <Binding name="TOGGLERAIDSORT">
                XPerlConfig.SortRaidByClass = abs(XPerlConfig.SortRaidByClass - 1)
                if (XPerl_Raid_Position) then
                        XPerl_Raid_Position()
                end
        </Binding>
        <Binding name="TOGGLEOPTIONS">
                XPerl_Toggle()
	</Binding>
        <Binding name="TOGGLEBUFFTYPE">
                if (XPerl_ToggleRaidBuffs) then
                        XPerl_ToggleRaidBuffs()
                end
        </Binding>
        <Binding name="TOGGLEBUFFCASTABLE">
                if (XPerl_ToggleRaidBuffs) then
                        XPerl_ToggleRaidBuffs(1)
                end
        </Binding>
</Bindings>
