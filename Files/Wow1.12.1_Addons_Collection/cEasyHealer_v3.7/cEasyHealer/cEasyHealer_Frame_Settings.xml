				</Backdrop>
				<Size>
					<AbsDimension x="257" y="28"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="10" y="-70"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						this:ClearFocus();
					</OnShow>
					<OnEscapePressed>
						this:ClearFocus();
